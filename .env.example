# ===========================================
# ARBION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/arbion

# ===========================================
# AUTHENTICATION
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl

# JWT token expiration in hours
JWT_EXPIRE_HOURS=12

# Owner account credentials (created on first startup)
OWNER_USERNAME=admin
OWNER_PASSWORD=change-this-password

# ===========================================
# TELEGRAM (Telethon)
# ===========================================
TG_API_ID=12345678
TG_API_HASH=your-api-hash-here
TG_SESSION_STRING=your-session-string-here

# ===========================================
# OPENAI
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# PINECONE (Vector Database)
# ===========================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=arbion-products
PINECONE_ENVIRONMENT=us-east-1

# ===========================================
# SUPABASE (Optional - for media storage)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key
STORAGE_BUCKET=chat-media

# ===========================================
# APPLICATION SETTINGS
# ===========================================
LOG_LEVEL=INFO
IS_PRODUCTION=false
